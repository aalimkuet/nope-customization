@model IEnumerable<CustomerTrackerModel>

<div style="margin-bottom: 30px">
    <h2>Customer List</h2>
</div>

<div class="table-wrapper">
    <table class="cart">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureId)
            </th>
        </tr>


        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>

                    <td width="300px">
                        <a href="@item.PictureUrl" target="_blank">
                            <div style="max-width:100px">
                                <img alt="@item.OverrideAltAttribute" src="@item.PictureUrl" title="@item.OverrideTitleAttribute" style="width:100%" />
                            </div>
                        </a>
                    </td>

                </tr>
            }
        }

    </table>
</div>