@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.NopStation.Documentation.Configuration").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Documentation.Configuration");
}

<form asp-controller="Documentation" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.Documentation.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync("StoreScopeConfiguration")
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="AllowGuestUsersToLeaveComments_OverrideForStore" asp-input="AllowGuestUsersToLeaveComments" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="AllowGuestUsersToLeaveComments" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="AllowGuestUsersToLeaveComments" asp-required="true" />
                                    <span asp-validation-for="AllowGuestUsersToLeaveComments"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="DocumentationCommentsMustBeApproved_OverrideForStore" asp-input="DocumentationCommentsMustBeApproved" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="DocumentationCommentsMustBeApproved" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="DocumentationCommentsMustBeApproved" asp-required="true" />
                                    <span asp-validation-for="DocumentationCommentsMustBeApproved"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="HomepageText_OverrideForStore" asp-input="HomepageText" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="HomepageText" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="HomepageText" asp-required="true" />
                                    <span asp-validation-for="HomepageText"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="MinimumIntervalToAddComments_OverrideForStore" asp-input="MinimumIntervalToAddComments" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="MinimumIntervalToAddComments" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="MinimumIntervalToAddComments" asp-required="true" />
                                    <span asp-validation-for="MinimumIntervalToAddComments"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="ShowLinkOnTopMenu_OverrideForStore" asp-input="ShowLinkOnTopMenu" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ShowLinkOnTopMenu" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ShowLinkOnTopMenu" asp-required="true" />
                                    <span asp-validation-for="ShowLinkOnTopMenu"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="ShowLinkInFooterMenu_OverrideForStore" asp-input="ShowLinkInFooterMenu" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ShowLinkInFooterMenu" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ShowLinkInFooterMenu" asp-required="true" />
                                    <span asp-validation-for="ShowLinkInFooterMenu"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
